<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>feedletter.log</file>
    <append>true</append>
    <encoder>
      <pattern>%date{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC} [%t] %-5p [%c{1}] %m %n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="FILE" />
  </root>
</configuration>
